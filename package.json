{
  "name": "@neonhub/monorepo",
  "version": "2.1.0",
  "description": "NeonHub v2.1 - Complete AI-powered marketing automation platform",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:e2e": "playwright test",
    "test:watch": "turbo run test:watch",
    "type-check": "turbo run type-check",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,md,json}\"",
    "clean": "turbo run clean",
    "clean:deps": "rm -rf node_modules && rm -rf **/node_modules && rm -rf **/.next && rm -rf **/dist",
    "postinstall": "pnpm build",
    "start": "turbo run start",
    "start:dashboard": "cd apps/dashboard && pnpm dev",
    "start:api": "cd apps/api && pnpm dev",
    "deploy": "turbo run build && vercel --prod",
    "deploy:preview": "turbo run build && vercel",
    "agents:registry": "cd packages/core-agents && pnpm run registry:sync",
    "db:generate": "cd packages/data-model && pnpm prisma generate",
    "db:migrate": "cd packages/data-model && pnpm prisma migrate dev",
    "db:push": "cd packages/data-model && pnpm prisma db push",
    "db:seed": "cd packages/data-model && pnpm prisma db seed",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build --filter=./packages/* && changeset publish"
  },
  "dependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.10.0",
    "turbo": "^1.10.16"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.8",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "eslint-config-next": "^14.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.10.0",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/neonhub/neon-v2.1.git"
  },
  "keywords": ["ai", "marketing", "automation", "agents", "dashboard", "neon", "glassmorphism"],
  "author": "NeonHub Team",
  "license": "MIT"
}
