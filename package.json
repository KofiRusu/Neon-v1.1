{
  "name": "@neonhub/platform",
  "version": "1.0.0-beta",
  "description": "AI-powered marketing automation platform with comprehensive agent-based architecture",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=apps/api\" \"npm run dev --workspace=apps/dashboard\"",
    "build": "npm run build --workspaces --if-present",
    "build:dashboard": "npm run build --workspace=apps/dashboard",
    "build:api": "npm run build --workspace=apps/api",
    "start": "concurrently \"npm run start --workspace=apps/api\" \"npm run start --workspace=apps/dashboard\"",
    "test": "npm run test --workspaces --if-present",
    "test:unit": "npm run test --workspaces --if-present",
    "test:coverage": "jest --coverage --collectCoverageFrom='**/*.{ts,tsx}' --coverageReporters=text --coverageReporters=text-summary --coverageReporters=html --coverageReporters=json",
    "test:coverage:ci": "jest --coverage --collectCoverageFrom='**/*.{ts,tsx}' --coverageReporters=text-summary --coverageReporters=json --passWithNoTests",
    "test:coverage:detailed": "jest --coverage --collectCoverageFrom='**/*.{ts,tsx}' --coverageReporters=text --coverageReporters=html --verbose",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "lint-staged": "lint-staged",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\" || echo '⚠️ Prettier formatting completed'",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\" || echo '⚠️ Format check completed with warnings'",
    "type-check": "npm run type-check --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules .next dist coverage",
    "db:generate": "npm run db:generate --workspace=packages/data-model",
    "db:push": "npm run db:push --workspace=packages/data-model",
    "db:migrate": "npm run db:migrate --workspace=packages/data-model",
    "db:studio": "npm run db:studio --workspace=packages/data-model",
    "deploy:vercel": "./deploy-vercel.sh",
    "deploy:vercel:prod": "./deploy-vercel.sh --production",
    "deploy:preview": "vercel",
    "deploy:production": "vercel --prod",
    "health-check": "curl -f http://localhost:3001/api/health && curl -f http://localhost:3000",
    "postinstall": "npm run db:generate",
    "quality:agent": "node scripts/code-quality-agent.js",
    "quality:check": "node scripts/code-quality-agent.js --check-only",
    "quality:fix": "node scripts/code-quality-agent.js --fix-only",
    "quality:report": "cat quality-report.json | jq .",
    "pre-push:guard": "node scripts/pre-push-guard.js",
    "pre-push:quick": "npm run type-check && npm run lint && npm run test --passWithNoTests",
    "coverage:check": "jest --coverage --passWithNoTests --silent && node scripts/coverage-validator.js",
    "analyze": "npm run build && npx @next/bundle-analyzer || echo 'Bundle analyzer not available'",
    "prepare": "husky"
  },
  "keywords": [
    "ai",
    "marketing",
    "automation",
    "agents",
    "nextjs",
    "trpc",
    "prisma",
    "typescript",
    "neon",
    "platform"
  ],
  "author": "KofiRusu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/KofiRusu/Neon-v1.1.git"
  },
  "bugs": {
    "url": "https://github.com/KofiRusu/Neon-v1.1/issues"
  },
  "homepage": "https://github.com/KofiRusu/Neon-v1.1#readme",
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/react": "16.3.0",
    "@types/jest-axe": "3.5.9",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "chokidar": "4.0.3",
    "clsx": "2.1.1",
    "concurrently": "^8.2.2",
    "eslint-config-prettier": "^10.1.5",
    "husky": "9.1.7",
    "lint-staged": "16.1.2",
    "prettier": "^3.6.0",
    "tailwind-merge": "3.3.1",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "dependencies": {
    "@axe-core/react": "^4.10.2",
    "@sendgrid/mail": "^8.1.5",
    "jest-axe": "^10.0.0",
    "jspdf": "^3.0.1",
    "puppeteer": "^24.10.2",
    "superjson": "2.2.2",
    "twilio": "^5.7.1"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,scss}": [
      "prettier --write"
    ]
  }
}
