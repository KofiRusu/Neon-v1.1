{
  "name": "@neonhub/platform",
  "version": "1.0.0-beta",
  "description": "AI-powered marketing automation platform with comprehensive agent-based architecture",
  "main": "index.js",
  "private": true,
  "packageManager": "pnpm@8.10.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm run dev --filter=@neon/api\" \"pnpm run dev --filter=@neonhub/dashboard\"",
    "build": "pnpm run build --recursive --filter=!@neonhub/platform",
    "build:dashboard": "pnpm run build --filter=@neonhub/dashboard",
    "build:api": "pnpm run build --filter=@neon/api",
    "start": "concurrently \"pnpm run start --filter=@neon/api\" \"pnpm run start --filter=@neonhub/dashboard\"",
    "test": "pnpm run test --recursive --filter=!@neonhub/platform",
    "test:unit": "pnpm run test --recursive --filter=!@neonhub/platform",
    "test:coverage": "pnpm run test:coverage --recursive --filter=!@neonhub/platform || echo '⚠️ Coverage not available for all workspaces'",
    "test:e2e": "playwright test",
    "lint": "pnpm run lint --recursive --filter=!@neonhub/platform",
    "lint:fix": "pnpm run lint:fix --recursive --filter=!@neonhub/platform",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\" || echo '⚠️ Prettier formatting completed'",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\" || echo '⚠️ Format check completed with warnings'",
    "type-check": "pnpm run type-check --recursive --filter=!@neonhub/platform",
    "clean": "pnpm run clean --recursive --filter=!@neonhub/platform && rm -rf node_modules .next dist coverage",
    "db:generate": "pnpm run db:generate --filter=@neon/data-model",
    "db:push": "pnpm run db:push --filter=@neon/data-model",
    "db:migrate": "pnpm run db:migrate --filter=@neon/data-model",
    "db:studio": "pnpm run db:studio --filter=@neon/data-model",
    "deploy:vercel": "./deploy-vercel.sh",
    "deploy:vercel:prod": "./deploy-vercel.sh --production",
    "deploy:preview": "vercel",
    "deploy:production": "vercel --prod",
    "health-check": "curl -f http://localhost:3001/api/health && curl -f http://localhost:3000",
    "validate": "pnpm lint && pnpm type-check && pnpm build",
    "validate:fast": "pnpm lint && pnpm type-check",
    "precommit": "pnpm lint:fix && pnpm format",
    "prepare": "husky install",
    "postinstall": "pnpm run db:generate"
  },
  "keywords": [
    "ai",
    "marketing",
    "automation",
    "agents",
    "nextjs",
    "trpc",
    "prisma",
    "typescript",
    "neon",
    "platform"
  ],
  "author": "KofiRusu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/KofiRusu/Neon-v1.1.git"
  },
  "bugs": {
    "url": "https://github.com/KofiRusu/Neon-v1.1/issues"
  },
  "homepage": "https://github.com/KofiRusu/Neon-v1.1#readme",
  "engines": {
    "node": ">=18.17.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "chokidar": "^4.0.3",
    "concurrently": "^8.2.2",
    "eslint-config-prettier": "^10.1.5",
    "husky": "^9.1.7",
    "prettier": "^3.6.0",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "dependencies": {
    "@axe-core/react": "^4.10.2",
    "@sendgrid/mail": "^8.1.5",
    "jest-axe": "^10.0.0",
    "jspdf": "^3.0.1",
    "puppeteer": "^24.10.2",
    "twilio": "^5.7.1"
  }
}
