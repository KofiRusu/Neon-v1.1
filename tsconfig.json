{
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "skipLibCheck": true,
    "strict": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@neon/*": ["packages/*/src"]
    }
  },
  "references": [
    { "path": "./apps/dashboard" },
    { "path": "./apps/api" },
    { "path": "./packages/core-agents" },
    { "path": "./packages/data-model" },
    { "path": "./packages/reasoning-engine" },
    { "path": "./packages/types" },
    { "path": "./packages/utils" }
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist",
    "coverage"
  ]
}
